<html>
    <head>
        <meta charset="utf-8">
        
        <title>Login Page</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <style>
          .login-form {
              width: 340px;
              margin: 50px auto;
              font-size: 15px;
          }
          .login-form form {
              margin-bottom: 15px;
              background: #f7f7f7;
              box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
              padding: 30px;
          }
          .login-form h2 {
              margin: 0 0 15px;
          }
          .form-control, .btn {
              min-height: 38px;
              border-radius: 2px;
          }
          .btn {        
              font-size: 15px;
              font-weight: bold;
          }
          h1{
                font-family: 'Brush Script MT';
                }
            h3{
                color: wheat;
                font-family: Garamond, serif;
                font-weight: bold;
                text-align: center;
                }
            p{
                font-size: medium;
                font-family:cursive;
                }
          </style>
      </head>   
      <body style="background-color:orangered">
        <div class="container-fluid px-0">
            <nav class="navbar navbar-expand-sm navbar-dark bg-black py-0 px-0"> <a class="navbar-brand" href="#"><img id="logo" src="dryfruit.jfif" class="rounded-circle" alt="Cinque Terre" width="188" height="188"> &nbsp;&nbsp;&nbsp;</a> <span class="v-line"></span> <button class="navbar-toggler mr-3" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <h1 style="text-align:center; font-size:75; display: inline-block" class="font-weight-bold">A House</h1>
                    <h2 style="text-align:center; display: inline-block" > - The Dry Fruit Store</h2>
                </div>
            </nav>
        </div>
        <br>

        <div class="login-form">
          <form action="/login" method="POST">
              <h2 class="text-center">Log in</h2>       
              <div class="form-group">
                  <input type="text" class="form-control" placeholder="Username" required="required" name="username">
              </div>
              <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password" required="required" name="password">
              </div>
              <div class="form-group">
                  <button type="submit" class="btn btn-primary btn-block">Log in</button>
              </div>      
          </form>
      </div>
      </body>
</html>